# Application Configuration
NGX_APP__SECRET_KEY=your-secret-key-here-change-this
NGX_APP__DEBUG=false
NGX_APP__LOG_LEVEL=INFO

# Database Configuration
NGX_DATABASE__PROVIDER=sqlite
NGX_DATABASE__NAME=ngx_intelligence.db
# For PostgreSQL:
# NGX_DATABASE__PROVIDER=postgresql
# NGX_DATABASE__HOST=localhost
# NGX_DATABASE__PORT=5432
# NGX_DATABASE__NAME=ngx_intelligence
# NGX_DATABASE__USER=cortex
# NGX_DATABASE__PASSWORD=your-db-password

# AI Configuration
NGX_AI__PROVIDER=ollama
NGX_AI__OLLAMA__BASE_URL=http://localhost:11434
NGX_AI__OLLAMA__MODEL=llama3.2
NGX_AI__OLLAMA__TEMPERATURE=0.7

# Processing Configuration
NGX_PROCESSING__MODE=realtime
NGX_PROCESSING__POLLING_INTERVAL=30
NGX_PROCESSING__CONCURRENT_WORKERS=1

# JWT Configuration
NGX_JWT__ACCESS_TOKEN_EXPIRE_MINUTES=15
NGX_JWT__REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
NGX_APP__ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Configuration File Path
CONFIG_PATH=/app/config/config.yaml

# Optional: Webhook Configuration
# NGX_NOTIFICATIONS__WEBHOOK__ENABLED=false
# NGX_NOTIFICATIONS__WEBHOOK__URL=https://your-webhook-url.com
# NGX_NOTIFICATIONS__WEBHOOK__SECRET=your-webhook-secret
