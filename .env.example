# Environment Configuration for ngx-intelligence
# Copy this file to .env and update with your values

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application environment (development, staging, production)
APP_ENV=production

# Application name
APP_NAME=ngx-intelligence

# Frontend port (default: 3000)
FRONTEND_PORT=3000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database file path (relative to container)
# Default: sqlite:////app/data/ngx_intelligence.db
DATABASE_URL=sqlite:////app/data/ngx_intelligence.db

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for JWT token generation
# IMPORTANT: Generate a secure random string for production
# Example: openssl rand -hex 32
NGX_APP__SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT token expiration (in minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration (in days)
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS origins (comma-separated list)
# For development: http://localhost:3000,http://localhost:5173
# For production: https://yourdomain.com
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# OLLAMA CONFIGURATION
# =============================================================================

# Ollama service URL
# For Docker network: http://host.docker.internal:11434
# For external service: http://your-ollama-server:11434
NGX_AI__OLLAMA__BASE_URL=http://host.docker.internal:11434

# Default model for document processing
NGX_AI__OLLAMA__MODEL=llama3.2:3b

# Ollama request timeout (in seconds)
OLLAMA_TIMEOUT=120

# =============================================================================
# PAPERLESS-NGX INTEGRATION
# =============================================================================

# Paperless-ngx base URL
PAPERLESS_URL=http://localhost:8080

# Paperless-ngx API token
# Generate this in Paperless-ngx settings
PAPERLESS_API_TOKEN=your-paperless-api-token

# Paperless-ngx API timeout (in seconds)
PAPERLESS_API_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json, text)
LOG_FORMAT=json

# Log file path (relative to container)
LOG_PATH=/app/logs

# =============================================================================
# TASK SCHEDULER SETTINGS
# =============================================================================

# Enable automatic document processing
AUTO_PROCESS_ENABLED=true

# Interval for checking new documents (in seconds)
# Default: 300 (5 minutes)
DOCUMENT_CHECK_INTERVAL=300

# Maximum concurrent processing jobs
MAX_CONCURRENT_JOBS=3

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Number of Uvicorn workers (backend)
# Set to number of CPU cores for production
UVICORN_WORKERS=1

# Maximum request size (in MB)
MAX_REQUEST_SIZE=100

# Request timeout (in seconds)
REQUEST_TIMEOUT=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable experimental features
ENABLE_EXPERIMENTAL_FEATURES=false

# Enable metrics collection
ENABLE_METRICS=true

# Enable detailed error messages (disable in production)
ENABLE_DEBUG_ERRORS=false

# =============================================================================
# CONFIGURATION FILE PATH
# =============================================================================

# Path to config.yaml file (relative to container)
CONFIG_PATH=/app/config/config.yaml

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================

# Redis URL (if using Redis for caching/job queue)
# REDIS_URL=redis://localhost:6379/0

# Sentry DSN (if using Sentry for error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Enable auto-reload for development (backend)
# AUTO_RELOAD=true

# Enable CORS for all origins (development only)
# CORS_ALLOW_ALL=true
